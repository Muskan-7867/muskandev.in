---
// Minimal Work Experience component
const experiences = [
  {
    company: "Om Enterprises",
    role: "Full Stack Developer",
    period: "April 2025 - Present",
    technologies: ["Next.js", "MERN Stack", "Flutter", "React Native"],
    description:
      "Building cross-platform applications using modern frameworks and technologies.",
    current: true,
  },
  {
    company: "Ricoz",
    role: "Full Stack Developer",
    period: "3 Month Internship",
    technologies: ["MongoDB", "Express.js", "React", "Node.js"],
    description: "Developed full-stack web applications using the MERN stack.",
    current: false,
  },
];
---

<section id="experience" class=" px-4">
  <div class="max-w-4xl mx-auto">
    <div class="mb-6">
      <h2 class="text-xl md:text-2xl font-bold mb-3 text-[var(--text-primary)]">
        Work Experience
      </h2>
      <p class="text-[var(--text-secondary)] text-xs">My professional journey</p>
    </div>

    <div class="relative  space-y-12">
      {
        experiences.map((exp) => (
          <div class="relative">
            
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-2">
              <h3 class="text-md font-bold text-[var(--text-primary)]">
                {exp.role}
              </h3>
              <span class="text-xs text-[var(--text-secondary)] font-mono mt-1 sm:mt-0">
                {exp.period}
              </span>
            </div>
            
            <div class="mb-1">
              <span class="text-sm font-medium text-[var(--text-secondary)]">
                {exp.company}
              </span>
              {exp.current && (
                <span class="ml-3 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-[var(--bg-secondary)] text-[var(--text-primary)]">
                  Present
                </span>
              )}
            </div>

            <p class="text-[var(--text-secondary)] mb-4 leading-relaxed max-w-2xl text-xs">
              {exp.description}
            </p>

            <div class="flex flex-wrap gap-2">
              {exp.technologies.map((tech) => (
                <span class="px-2.5 py-1 text-xs border border-[var(--border-color)] rounded-full text-[var(--text-secondary)] bg-[var(--bg-secondary)]">
                  {tech}
                </span>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
