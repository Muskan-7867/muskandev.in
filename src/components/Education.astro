---
// Minimal Education component
const education = {
  degree: "Bachelor of Technology (B.Tech)",
  branch: "Electronics and Communication Engineering (ECE)",
  college: "DAV Institute of Engineering and Technology",
  period: "2021 - 2025",
};
---

<section id="education" class=" px-6">
  <div class="max-w-4xl mx-auto">
    <div class="mb-6">
      <h2
        class="text-3xl md:text-2xl font-bold mb-2 text-[var(--text-primary)]"
      >
        Education
      </h2>
      <p class="text-[var(--text-secondary)] text-xs">Academic background</p>
    </div>

    <div class="relative ">
      <div class="relative ">
    

        <div
          class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-2"
        >
          <h3 class="text-md font-bold text-[var(--text-primary)]">
            {education.degree}
          </h3>
          <span
            class="text-xs text-[var(--text-secondary)] font-mono mt-1 sm:mt-0"
          >
            {education.period}
          </span>
        </div>

        <p class="text-sm font-medium text-[var(--text-secondary)] mb-1">
          {education.branch}
        </p>

        <p class="text-xs text-[var(--text-secondary)]">
          {education.college}
        </p>
      </div>
    </div>
  </div>
</section>
