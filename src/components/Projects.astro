---
const projects = [
     {
    title: "Coyote Cricket",
    description:
      "An e-commerce website focused on cricket accessories and equipment, featuring product categories, detailed product pages, and a clean UI for sports enthusiasts.",
    tech: ["Next.js", "TypeScript", "Tailwind CSS", "Mongo DB"],
    link: "https://www.coyotecricket.com",
    github: "https://github.com/Muskan-7867/coyete-cricket",
    image: "/images/coyote.png",
  },
  {
    title: "Omeg Bazaar",
    description:
      "A complete e-commerce shopping application with product listings, cart functionality, secure checkout, and user authentication, designed for a smooth online shopping experience.",
    tech: ["Next.js", "TypeScript", "Tailwind CSS", "Mongo DB"],
    link: "https://omegbazaar.com",
    github: "https://github.com/Muskan-7867/omeg-bazaar-website",
    image: "/images/home.png",
  },
 
  {
    title: "Banarasi Lehnga House",
    description:
      "A fashion-focused clothing website showcasing traditional Banarasi lehngas and ethnic wear with elegant design, product galleries, and a premium brand feel.",
    tech: ["Next.js", "Tailwind CSS", "Mongo DB", "TypeScript"],
    link: "https://banarsilehngahouse.com",
    github: "https://github.com/Muskan-7867/Banarasi-lehanga",
    image: "/images/lehnga.png",
  },
];
---
<section id="projects" class="py-20 px-4 bg-black">
  <div class="max-w-7xl mx-auto space-y-6">

      <div class="mb-6">
      <h2 class="text-xl md:text-2xl font-bold mb-3 text-[var(--text-primary)]">
        Projects
      </h2>
      <p class="text-[var(--text-secondary)] text-xs">Some of my recent work</p>
    </div>
    {projects.map((project, index) => (
      <div
       
        class="flex items-center bg-[var(--bg-secondary)] rounded-lg border border-[var(--border-color)] shadow-md p-4 transition-transform  hover:shadow-xl"
      >
        <!-- Image on the left -->
        <a
          href={project.link}
          target="_blank"
          rel="noopener noreferrer"
          class="flex-shrink-0 w-24 h-24 md:w-52 md:h-48 overflow-hidden rounded-lg"
          aria-label={`View ${project.title}`}
        >
          <img
            src={project.image}
            alt={project.title}
            class="w-full h-full object-cover"
          />
        </a>

        <!-- Text content on the right -->
        <div class="ml-4 flex-1 flex flex-col justify-between h-full">
          <div>
            <h3 class="text-lg font-semibold text-[var(--text-primary)] mb-1">{project.title}</h3>
            <p class="text-xs text-[var(--text-secondary)] mb-4">{project.description}</p>
            <!-- Tags / Tech Stack -->
            <div class="flex flex-wrap gap-1 mb-2">
              {project.tech.map((t, idx) => (
                <span
                  class="text-xs px-2 py-1.5 rounded-lg bg-[var(--bg-secondary)] text-[var(--text-secondary)] border border-[var(--border-color)]"
                >
                  {t}
                </span>
              ))}
            </div>
          </div>

          <!-- Action buttons -->
          <div class="flex justify-between items-center mt-4">
            <a
              href={project.github}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center gap-2 text-sm text-[var(--text-secondary)] hover:text-[var(--accent-color)]"
            >
              <!-- GitHub Icon -->
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
              </svg>
              Source
            </a>
            <a
              href={project.link}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 text-sm font-medium text-[var(--accent-color)] hover:gap-3 transition-all"
            >
              Visit Site
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    ))}
  </div>
</section>

